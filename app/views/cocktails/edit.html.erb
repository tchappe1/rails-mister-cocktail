<div id="container">
<div class="content">
<h1>Modify cocktail</h1>

<%= form_for(@cocktail) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit  :class => 'button' %>


<% end %>
</div>
<% @cocktail.doses.each do |dose| %>
<%= dose.ingredient.name %>
-
<%= dose.description %>
<br>
<% end %>
</div>
